<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RequestCoinsActivity">

    <include layout="@layout/view_titlebar_common"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_level1"
        android:fillViewport="true"
        android:scrollbars="none" >
        <fragment
            android:id="@+id/request_coins_fragment"
            android:name="com.bethel.mycoolwallet.fragment.RequestCoinsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>